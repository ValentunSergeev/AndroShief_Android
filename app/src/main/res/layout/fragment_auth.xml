<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.valentun.androshief.Fragments.AuthFragment">


    <android.support.v7.widget.CardView
        android:layout_width="309dp"
        android:layout_height="323dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/create_recipe_name"
                android:layout_width="250dp"
                android:layout_height="52dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:textColor="@color/colorBlack"
                android:hint="Email"
                android:inputType="textEmailAddress"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/create_recipe_description"
                android:layout_width="250dp"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorBlack"
                android:hint="Password"
                android:inputType="textPassword"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@+id/create_recipe_name"
                app:layout_constraintRight_toRightOf="@+id/create_recipe_name"
                app:layout_constraintTop_toBottomOf="@+id/create_recipe_name" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/create_submit"
                android:layout_width="250dp"
                android:layout_marginTop="24dp"
                android:text="Register"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@+id/create_recipe_description"
                app:layout_constraintRight_toRightOf="@+id/create_recipe_description"
                app:layout_constraintTop_toBottomOf="@+id/create_recipe_description"
                android:layout_height="65dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/auth_log_in"
                android:layout_width="250dp"
                android:text="Log in"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/create_submit"
                app:layout_constraintRight_toRightOf="@+id/create_submit"
                app:layout_constraintTop_toBottomOf="@+id/create_submit"
                android:layout_height="65dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
